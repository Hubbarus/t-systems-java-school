<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="project.entity.Addresses" table="addresses" schema="mms_schema" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="country">
            <column name="country" sql-type="text"/>
        </property>
        <property name="city">
            <column name="city" sql-type="text"/>
        </property>
        <property name="postcode">
            <column name="postcode" sql-type="integer"/>
        </property>
        <property name="street">
            <column name="street" sql-type="text"/>
        </property>
        <property name="building">
            <column name="building" sql-type="integer"/>
        </property>
        <property name="flat">
            <column name="flat" sql-type="integer"/>
        </property>
        <set name="ordersById" inverse="true">
            <key>
                <column name="address_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="project.entity.Orders"/>
        </set>
    </class>
</hibernate-mapping>
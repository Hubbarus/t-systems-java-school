<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Clients" table="clients" schema="mms_schema" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="firstName">
            <column name="first_name" sql-type="text"/>
        </property>
        <property name="lastName">
            <column name="last_name" sql-type="text"/>
        </property>
        <property name="birthDate">
            <column name="birth_date" sql-type="date"/>
        </property>
        <property name="email">
            <column name="email" sql-type="text"/>
        </property>
        <property name="username">
            <column name="username" sql-type="text"/>
        </property>
        <property name="userPass">
            <column name="user_pass" sql-type="text"/>
        </property>
        <set name="orders" inverse="true" lazy="false">
            <key>
                <column name="client_id"/>
            </key>
            <one-to-many not-found="ignore" class="entity.Orders"/>
        </set>
    </class>
</hibernate-mapping>
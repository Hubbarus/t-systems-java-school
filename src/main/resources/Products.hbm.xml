<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Products" table="products" schema="mms_schema" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="itemName">
            <column name="item_name" sql-type="text"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double precision" precision="-1"/>
        </property>
        <property name="itemGroup">
            <column name="item_group" sql-type="text"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text"/>
        </property>
        <property name="weight">
            <column name="weight" sql-type="double precision" precision="-1"/>
        </property>
        <property name="volume">
            <column name="volume" sql-type="double precision" precision="-1"/>
        </property>
        <property name="stock">
            <column name="stock" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="project.entity.Orders" table="orders" schema="mms_schema" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="bigint"/>
        </id>
        <property name="payMethod">
            <column name="pay_method" sql-type="text"/>
        </property>
        <property name="shipMethod">
            <column name="ship_method" sql-type="text"/>
        </property>
        <property name="payStatus">
            <column name="pay_status" sql-type="boolean"/>
        </property>
        <property name="status">
            <column name="status" sql-type="text"/>
        </property>
        <many-to-one name="client" class="project.entity.Clients">
            <column name="client_id"/>
        </many-to-one>
        <many-to-one name="address" class="project.entity.Addresses">
            <column name="address_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>
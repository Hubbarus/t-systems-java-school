<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Product" table="products" schema="mms_schema" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="text" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="text" not-null="true"/>
        </property>
        <property name="group">
            <column name="group" sql-type="text" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>
        <property name="weight">
            <column name="weight" sql-type="double precision" precision="-1" not-null="true"/>
        </property>
        <property name="volume">
            <column name="volume" sql-type="double precision" precision="-1" not-null="true"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="integer" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>